{
  "$schema": "https://docs.molt.bot/schema/openclaw.json",
  
  "_comment": "OpenClaw Starter Kit - GPT 5.2 + Telegram + Dev/Research Agents",
  
  "defaultModel": "openai/gpt-5.2",
  
  "providers": {
    "openai": {
      "apiKeyEnv": "OPENAI_API_KEY"
    }
  },
  
  "channels": {
    "telegram": {
      "enabled": true,
      "token": "YOUR_TELEGRAM_BOT_TOKEN",
      "allowList": ["YOUR_TELEGRAM_USER_ID"]
    }
  },
  
  "workspace": {
    "path": "~/.openclaw/workspace"
  },
  
  "sandbox": {
    "_comment": "Enable for safe code execution in Docker container",
    "enabled": true,
    "image": "openclaw-sandbox:latest",
    "networkDisabled": true,
    "mounts": {
      "workspace": {
        "host": "~/.openclaw/workspace",
        "container": "/workspace",
        "mode": "rw"
      }
    }
  },
  
  "agents": {
    "main": {
      "_comment": "Primary agent - your direct assistant",
      "model": "openai/gpt-5.2",
      "tools": [
        "read", "write", "edit", "exec", "process",
        "web_search", "web_fetch",
        "sessions_spawn", "sessions_list", "sessions_send", "sessions_history",
        "cron", "message"
      ]
    },
    
    "dev": {
      "_comment": "Dev worker - coding tasks, sandboxed, no network",
      "model": "openai/gpt-5.2",
      "sandbox": true,
      "networkDisabled": true,
      "tools": [
        "read", "write", "edit", "exec", "process"
      ]
    },
    
    "research": {
      "_comment": "Research worker - web access, sandboxed; treat output as tainted until reviewed",
      "model": "openai/gpt-5.2",
      "sandbox": true,
      "networkEnabled": true,
      "tools": [
        "read", "write",
        "web_search", "web_fetch", "browser"
      ]
    }
  },
  
  "heartbeat": {
    "_comment": "Periodic check-in for proactive behavior",
    "enabled": true,
    "intervalMinutes": 30
  },
  
  "memory": {
    "_comment": "Memory search across workspace files",
    "enabled": true,
    "paths": [
      "~/.openclaw/workspace/MEMORY.md",
      "~/.openclaw/workspace/memory/*.md",
      "~/.openclaw/workspace/kg/*.md"
    ]
  }
}
